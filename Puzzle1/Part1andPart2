def count_zeros_during_rotation(start,delta):
    count=0
    steps=abs(delta)
    direction=1 if delta>0 else -1
    position=start
    for _ in range(steps):
        position=(position+direction)%100
        if position==0:
            count+=1
    return count

with open(r'c:\Users\shera\Downloads\AdventOfCode2025\rotations.txt','r') as file:
    rotations=[line.strip() for line in file if line.strip()!='']
currentposition=50
TimesAtZero=0
for instruction in rotations:
    direction=instruction[0] #Left or Right
    distance=int(instruction[1:]) #Amount of Clicks
    if direction=='R':
        delta=distance
    else:
        delta=-distance 
    TimesAtZero+=count_zeros_during_rotation(currentposition,delta)
    currentposition=(currentposition+delta)%100
print(f'Password at Times at Zero including during rotations: {TimesAtZero}')
